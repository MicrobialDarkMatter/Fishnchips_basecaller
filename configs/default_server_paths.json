{
    "model":{
        "encoder_max_length": 400,
        "decoder_max_length": 100,
        "attention_blocks": 4,
        "cnn_blocks": 5,
        "maxpool_idx": 3,
        "d_model": 250,
        "dff": 512,
        "num_heads": 25,
        "dropout_rate": 0.1,
        "maxpool_kernel": 4
    },
    "training":{
        "data":"./data/segmented/train.hdf5",
        "epochs": 3,
        "warmup":100, 
        "patience": 300,
        "batch_size":300,
        "lr_mult": 1
    },
    "validation":{
        "data":"./data/segmented/validate.hdf5",
        "batch_size":32,
        "algorithm": "editdistance"
    },
    "testing":{
        "data":"./data/segmented",
        "batch_size":300
    }
}